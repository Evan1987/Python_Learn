   "source": [
    "def factorial(x):\n",
    "    def loop(x,acc=1):\n",
    "        if(x<=1):\n",
    "            return acc\n",
    "        else:\n",
    "            return loop(x-1,x*acc)\n",
    "    return loop(x)"
   ]
  }
